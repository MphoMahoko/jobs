@model jobs.Models.Inbox

@{
    ViewData["Title"] = "Send a message";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Contact Us</h2>





    @using (Html.BeginForm("Send", "Jobs"))
    {
        <div class="form-group">
            @Html.LabelFor(n=>n.Name,"Name")
            @Html.TextBoxFor(n=>n.Name, "", new {@class="form-control" })
            <div style="color: red">
                @Html.ValidationMessageFor(a => a.Name)
            </div>
        </div>

        <div class="form-row">
            <div class="col">
                @Html.LabelFor(n => n.Email, "Email")
                @Html.TextBoxFor(n => n.Email, "", new { @class = "form-control" })
                <div style="color: red">
                    @Html.ValidationMessageFor(a => a.Email)
                </div>
            </div>
            <div class="col">
                @Html.LabelFor(n => n.Phone, "Phone")
                @Html.TextBoxFor(n => n.Phone, "", new { @class = "form-control"})
                <div style="color: red">
                    @Html.ValidationMessageFor(a => a.Phone)
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(n => n.Message, "Message")
            @Html.TextAreaFor(n => n.Message,  new { @class = "form-control", rows=3 })
            <div style="color: red">
                @Html.ValidationMessageFor(a => a.Message)
            </div>
        </div>

        <button type="submit" class="btn btn-primary">Send</button>
    }


