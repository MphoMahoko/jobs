@model IEnumerable<jobs.Models.Message>

@{
    <!--  Layout = "~/Views/Shared/_Layout - nosides.cshtml";-->
    Layout = "~/Views/Shared/_Layout - nosides.cshtml";
    ViewData["Title"] = "Inbox";
}


<div class="row">
    <h3>Inbox</h3>
    <table class="table table-hover">
        <tbody>
            @foreach (var item in Model)
            {
            

            <tr style="font-weight:bold;">
                <th scope="row">
                    <input type="checkbox">
                </th>

                <td>  @Html.ActionLink(item.Job.Title, "Details", new { id = item.Id }) </td>

                <td>@item.BusinessProfile.Name</td>
                @if (DateTime.Now > item.CreatedOn.Date)
                {
                    <td>@item.CreatedOn.ToShortDateString()</td>
                }
                else
                {
                    <td>@item.CreatedOn.ToShortTimeString()</td>
                }

                @if (item.Read)
                {
                    <td>  Opened </td>

                }
                else
                {
                    <td>Unopened</td>
                }
            </tr>

         
            }
        

        </tbody>
    </table>
</div>

